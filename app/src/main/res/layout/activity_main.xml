<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <fragment
        android:id="@+id/mapsFragment"
        android:name="edu.msudenver.cs3013.catagentdeployer.MapsFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/detailFragment"
        tools:context=".MapsFragment" />

    <fragment
        android:id="@+id/detailFragment"
        android:name="edu.msudenver.cs3013.catagentdeployer.DetailFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/mapsFragment"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:context=".DetailFragment" />

</androidx.constraintlayout.widget.ConstraintLayout>